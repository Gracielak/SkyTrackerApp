<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Toolbar padrão (só visual) -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#888888"
        android:theme="@style/ThemeOverlay.MaterialComponents.ActionBar"
        app:titleTextColor="@android:color/white"
        app:title="" />

    <!-- Barra abaixo da toolbar -->
    <LinearLayout
        android:id="@+id/barraTitulo"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#888888"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/iconeMenu"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_menu_custom"
            android:contentDescription="Menu" />

        <TextView
            android:id="@+id/tituloBarra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previsão do Tempo"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <!-- TabLayout -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E0E0E0"
        app:tabTextColor="@android:color/black"
        app:tabIndicatorColor="@android:color/black" />

    <!-- ViewPager2 ocupando o espaço restante -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
